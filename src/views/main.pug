extends layout

block content

  -
    var works = [
      'Винтовые сваи — Набережная',
      'Винтовые сваи — Дорожник',
      'Винтовые сваи — Черемхи-1',
      'Винтовые сваи — Черемхи(2)',
      'Винтовые сваи — Черемхи',
      'Винтовые сваи — Черемхи-1'
    ]

  // добавляем класс .index только для главной страницы
  .page.index

    include includes/header

    main.main
      .main-info
        .wrapper
          .title Монтаж фундаментов<br>на винтовых сваях<br>по ХМАО и ЯНАО
          .bottom
            .bottom__item 368
              span готовых фундаментов<br>в Югре и на Ямале
            .bottom__item 6946
              span смонтированных<br>винтовых свай
            .bottom__item >100 лет
              span реальный срок<br>службы фундамента
            .bottom__item 24 км
              span общая длина свай<br>смонитрованных нами
          .main-info-img
      .services.wrapper
        h1.h1 Наши услуги
        .services__item(style="background-image: url('images/service-1.png')")
          | Фундамент дома на винтовых сваях
        .services__item(style="background-image: url('images/service-2.png')")
          | Услуги ямобура (БКМ)
        .services__item(style="background-image: url('images/service-3.png')")
          | Производство винтовых свай
        .abs-right
          a(href="#").button Смотреть еще 10 услуг
      .works-block
        .wrapper
          h1.h1 Последние работы
          // для разрешения ПК
          .works
            each item, index in works
              .works__item(style="background-image: url('images/work-" + (index + 1) + ".png')")
                span= item
          // для разрешения планшетов и мобилок
          .swiper-container.works-mobile.js-works
            .swiper-wrapper
              each item, index in works
                .swiper-slide.works__item(style="background-image: url('images/work-" + (index + 1) + ".png')")
                  span= item
          .abs-right
            a(href="#").button Смотреть все работы
      .partners
        .partners-slider
          a(href="#", style="background-image: url('images/garant.png')").swiper-slide
      .position
        .position-left
          form(action="#").form.white
            h1.h1 Оставьте заявку
            p Напишите свои контактные данные и наш менеджер свяжется с вами.
            .form-control.invalid
              input(type="text", id="input-1", placeholder="Ваше имя").form__input
            .form-control
              input(type="text", id="input-2", placeholder="Телефон / E-mail").form__input
            button(type="button").button.load Отправить
          .mess.main.err.show
            i.mess-icon
            p Не удалось отправить сообщение
            button(type="button").form__button.js-close Закрыть
          .mess.main
            i.mess-icon
            p Ваше сообщение успешно отправлено!
            button(type="button").form__button.js-close Закрыть
        .position-right
          // подразумевается вставка блока с кодом карты вместо span'а
          span(style="background-image: url('images/map.png')")

    include includes/footer
